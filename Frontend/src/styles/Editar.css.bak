/* Modal styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  padding: 30px;
  border-radius: 10px;
  width: 90%;
  max-width: 500px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.modal-content h3 {
  margin: 0 0 15px 0;
  color: #333;
  font-size: 1.5rem;
}

.modal-content p {
  margin: 0 0 25px 0;
  color: #666;
  font-size: 1.1rem;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 15px;
  justify-content: flex-end;
}

.btn-confirmar {
  padding: 10px 25px;
  background-color: #4a6cfa;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 500;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.btn-confirmar:hover {
  background-color: #3a5cd8;
}

.btn-cancelar-modal {
  padding: 10px 25px;
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 500;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.btn-cancelar-modal:hover {
  background-color: #e0e0e0;
}

/* Notification styles */
.notification {
  position: fixed;
  top: 20px;
  right: 20px;
  padding: 15px 25px;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  z-index: 1000;
  animation: slideIn 0.3s ease-out;
}

.notification.success {
  background-color: #48bb78;
  color: white;
  box-shadow: 0 2px 4px rgba(72, 187, 120, 0.2);
}

.notification.error {
  background-color: #f56565;
  color: white;
  box-shadow: 0 2px 4px rgba(245, 101, 101, 0.2);
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
  }
  
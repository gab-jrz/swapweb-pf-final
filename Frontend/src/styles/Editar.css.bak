/* Contenedor principal */
.edicion-perfil-container {
  max-width: 1200px;
  margin: 20px auto;
  padding: 20px;
  position: relative;
}

/* Título */
.titulo-edicion {
  text-align: center;
  color: #333;
  margin-bottom: 1.5rem;
  font-size: 1.8rem;
}

/* Formulario de edición */
.formulario-edicion {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Grupos de campos */
.grupo-campo {
  display: flex;
  align-items: center;
}

.grupo-campo label {
  width: 120px;
  color: #666;
  font-weight: 500;
  font-size: 1.1rem;
}

.grupo-campo input {
  flex: 1;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 1rem;
}

.grupo-campo input:focus {
  border-color: #4a6cfa;
  outline: none;
  box-shadow: 0 0 0 2px rgba(74, 108, 250, 0.2);
}

/* Botones */
.btn-iniciar-edicion,
.btn-guardar-edicion {
  padding: 10px 30px;
  background-color: #4a6cfa;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 500;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.btn-iniciar-edicion:hover,
.btn-guardar-edicion:hover {
  background-color: #3a5cd8;
}

.btn-cancelar-edicion,
.btn-regresar-edicion {
  padding: 10px 25px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 500;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.btn-cancelar-edicion {
  background-color: #f0f0f0;
  color: #666;
}

.btn-cancelar-edicion:hover {
  background-color: #e0e0e0;
}

.btn-regresar-edicion {
  position: absolute;
  top: 0;
  left: 0;
  padding: 8px 15px;
  background: none;
  border: none;
  color: #666;
  cursor: pointer;
  font-size: 1rem;
  display: flex;
  align-items: center;
  gap: 5px;
}

.btn-regresar-edicion:hover {
  color: #333;
}

/* Contenedor de imagen */
.contenedor-imagen-edicion {
  width: 350px;
  height: 350px;
  position: relative;
}

.imagen-perfil-edicion {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #f8f9fa;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Selector de imagen */
.selector-imagen {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
}

.btn-seleccionar-imagen {
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8px 15px;
  border-radius: 20px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background-color 0.3s ease;
}

.btn-seleccionar-imagen:hover {
  background-color: rgba(0, 0, 0, 0.8);
}

/* Sección de información */
.seccion-info-edicion {
  padding: 1.5rem;
  background-color: #f8f9fa;
  border-radius: 8px;
}

.fila-info {
  margin: 1rem 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.etiqueta-info {
  font-weight: 600;
  color: #4a5568;
}

/* Acciones del formulario */
.acciones-formulario {
  display: flex;
  gap: 15px;
  margin-top: 20px;
  justify-content: flex-start;
}

.acciones-edicion {
  display: flex;
  justify-content: center;
  margin: 1rem 0;
}

/* Alertas */
.alerta-edicion {
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 6px;
  text-align: center;
  font-weight: 500;
}

.alerta-edicion.success {
  background-color: #c6f6d5;
  color: #2f855a;
}

.alerta-edicion.error {
  background-color: #fed7d7;
  color: #c53030;
}

/* Responsive */
@media (max-width: 768px) {
  .contenido-principal {
    flex-direction: column;
    gap: 30px;
  }

  .seccion-imagen {
    flex: none;
  }

  .grupo-campo {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .grupo-campo label {
    width: 100%;
  }

  .acciones-formulario {
    flex-direction: column;
  }
  
  .btn-guardar-edicion,
  .btn-cancelar-edicion {
    width: 100%;
  }
}


{
  "name": "swapweb-backend",
  "version": "1.0.0",
  "description": "Backend for SwapWeb application using MongoDB",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "mocha \"test/**/*.test.js\" --require test/setUpTest.js --timeout 15000",
    "test:watch": "mocha --watch \"test/**/*.test.js\" --require test/setUpTest.js --timeout 15000",
    "coverage": "c8 --all --include=src/**/*.js --exclude=test/** --reporter=text --reporter=html mocha \"test/**/*.test.js\" --require test/setUpTest.js --timeout 15000"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "mocha": "^11.7.0",
    "mongodb-memory-server": "^10.1.4",
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "nodemon": "^3.1.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**",
      "src/index.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "cache": false
  }
}
